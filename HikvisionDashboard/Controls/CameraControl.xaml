<UserControl x:Class="ANPRViewer.Controls.CameraControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             Height="300" Width="400">
    <Grid>
        <!-- VideoView ocupa todo el espacio -->
        <vlc:VideoView x:Name="VideoView" Loaded="VideoView_Loaded"
                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- Panel de controles en la parte inferior -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    VerticalAlignment="Bottom" Margin="10" Background="#80000000" Height="40">
            <Button Content="Play/Pause" Click="PlayPauseButton_Click" Margin="5"/>
            <Button Content="Reconnect" Click="ReconnectButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
