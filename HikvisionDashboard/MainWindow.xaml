<Window x:Class="HikvisionDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ANPR Viewer" Height="900" Width="1600"
        Background="#1E1E2E"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <!-- 🔹 Recursos globales -->
    <Window.Resources>
        <!-- Efecto de sombra reutilizable -->
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="#000000"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.35"/>
    </Window.Resources>

    <DockPanel LastChildFill="True" RenderTransformOrigin="0.422,0.475">

        <!-- Barra superior -->
        <Border DockPanel.Dock="Top" Background="#0A497B" Height="46">
            <DockPanel Margin="10,0">
                <!-- Logo -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Width="307">
                    <Image Source="Assets/logo1.png" Height="52" Margin="0,0,10,0" Width="138"/>
                    <TextBlock Text="SYSCONPARK" Foreground="White"
                               FontWeight="Bold" FontSize="20"
                               VerticalAlignment="Center" Width="132"/>
                </StackPanel>

                <!-- Indicadores -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Ellipse x:Name="ApiStatusIndicator" Width="14" Height="14" Fill="Gray" Margin="10,0"/>
                    <TextBlock Text="API" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <Ellipse x:Name="PlateStatusIndicator" Width="14" Height="14" Fill="Gray" Margin="10,0"/>
                    <TextBlock Text="PLATE" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <TextBlock x:Name="CameraStatusText" Text="0/0 Cámaras" Foreground="White" Margin="20,0"/>
                    <!-- Cajita con chulo -->
                    <Border Width="16" Height="16" 
                        BorderBrush="White" BorderThickness="2" 
                        CornerRadius="3" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Margin="0,0,5,0">
                        <!-- Chulito -->
                        <Path Data="M2,8 L6,12 L14,2"
                      Stroke="White"
                      StrokeThickness="2"
                      Stretch="Uniform"
                      SnapsToDevicePixels="True"/>
                    </Border>
                    <TextBlock x:Name="CaptureStatusText"
               Text="0 capturas obtenidas"
               Foreground="White"
               FontWeight="Bold"
               VerticalAlignment="Center"/>

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenido principal -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <!-- Grid de cámaras -->
                <ColumnDefinition Width="251" />
                <!-- Panel lateral -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <!-- Cámaras -->
                <RowDefinition Height="172.04" />
                <!-- Entrada / Salida -->
            </Grid.RowDefinitions>

            <!-- Panel de cámaras -->
            <!-- Panel de cámaras con borde redondeado -->
<Border Grid.Column="0"
        Grid.Row="0"
        Margin="10,3,10,35"
        CornerRadius="15"
        Background="#2B2B40"
        SnapsToDevicePixels="True">
    <Border.Effect>
        <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
    </Border.Effect>

    <Grid x:Name="CameraGrid" Background="Transparent"/>
</Border>


            <!-- PANEL LATERAL -->
            <Border Grid.Column="1" Grid.RowSpan="2" 
                    Background="#2F2F44" 
                    CornerRadius="8" 
                    Margin="0,3,10,10">
                <DockPanel>
                    <!-- Título -->
                    <TextBlock Text="EVENTOS RECIENTES"
                   FontWeight="Bold"
                   Foreground="White"
                   FontSize="16"
                   Margin="10,10,10,5"
                   DockPanel.Dock="Top" Width="162"/>

                    <!-- Lista de eventos -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="RecentEventsList"
                          ItemsSource="{Binding RecentEvents}" Width="219">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#161629"
                                        CornerRadius="10"
                                        Margin="4,6,4,6"
                                        Padding="6"
                                        SnapsToDevicePixels="True">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black"
                                              BlurRadius="10"
                                              ShadowDepth="2"
                                              Opacity="0.4"/>
                                        </Border.Effect>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Imagen -->
                                            <Image Source="{Binding FullImageUrl}"
                                                   Width="120"
                                                   Height="90"
                                                   Stretch="UniformToFill"
                                                   Grid.Column="0"
                                                   Margin="0,0,10,0"
                                                   ClipToBounds="True"/>

                                            <!-- Texto -->
                                            <StackPanel Grid.Column="1"
                                             VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Placa}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Hora}"
                                               Foreground="LightGray"
                                               FontSize="12"
                                               Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding Camara}"
                                               Foreground="#5757d9"
                                               FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Panel Entrada / Salida -->
            <Grid Grid.Column="0" Grid.Row="1" Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Entrada -->
                <Border Grid.Column="0" Background="#2F2F44" CornerRadius="10" Margin="0,-40,5,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="ENTRADA" Foreground="White" FontWeight="Bold" Margin="0,0,0,5" FontSize="20" Height="30"/>

                        <!-- Imagen con recuadro -->
                        <Border Background="#1E1E30"
                              CornerRadius="10"
                              Padding="5"
                              Margin="0,0,0,5" Width="208" Height="91">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                            </Border.Effect>
                            <Image x:Name="EntradaImage"
                             Stretch="Uniform"
                             ClipToBounds="True" Margin="16,10,0,1"/>
                        </Border>

                        <TextBlock x:Name="EntradaPlateText" Foreground="Lime" FontWeight="Bold" FontSize="20"/>
                        <TextBlock x:Name="EntradaDateText" Foreground="White" FontSize="10"/>
                    </StackPanel>
                </Border>

                <!-- Salida -->
                <Border Grid.Column="1" Background="#2F2F44" CornerRadius="10" Margin="5,-40,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="SALIDA" Foreground="White" FontWeight="Bold" Margin="0,0,0,5" FontSize="20" Height="30"/>

                        <!-- Imagen con recuadro -->
                        <Border Background="#1E1E30"
                                CornerRadius="10"
                                Padding="5"
                                Margin="0,0,0,5" Width="208" Height="91">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                            </Border.Effect>
                            <Image x:Name="SalidaImage"
                               Stretch="Uniform"
                               ClipToBounds="True" Margin="16,10,0,1"/>
                        </Border>

                        <TextBlock x:Name="SalidaPlateText" Foreground="Lime" FontWeight="Bold" FontSize="20"/>
                        <TextBlock x:Name="SalidaDateText" Foreground="White" FontSize="10" Height="17"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </DockPanel>
</Window>
